{

  "css.validate": false,
  "scss.validate": false,
  "less.validate": false,
  "alt-editor.name": "sublime",
  "breadcrumbs.enabled": true,
  "editor.autoIndent": "full",
  "editor.cursorStyle": "block",
  "editor.fontFamily": "'Fira Code', 'Fira Mono for Powerline', 'Source Code Pro for Powerline', 'Droid Sans Mono Dotted for Powerline', 'Ubuntu Mono derivative Powerline', 'Consolas', 'Courier New', 'monospace'",
  "editor.fontLigatures": true,
  "editor.fontSize": 14,
  "editor.formatOnSave": false,
  "editor.insertSpaces": true,
  "editor.lineHeight": 16,
  "editor.lineNumbers": "on",
  "editor.matchBrackets": "near",
  "editor.minimap.enabled": false,
  "editor.parameterHints.enabled": true,
  "editor.renderIndentGuides": true,
  "editor.renderLineHighlight": "gutter",
  "editor.renderWhitespace": "boundary",
  "editor.rulers": [
    80,
    120
  ],
  "editor.semanticHighlighting.enabled": false,
  "editor.tabSize": 2,
  "editor.tokenColorCustomizations": {
    "[Material Theme Darker High Contrast]": {
      "comments": "#888",
      "textMateRules": [
        {
          "name": "Comment punctuation",
          "scope": "punctuation.definition.comment",
          "settings": {
            "foreground": "#888"
          }
        }
      ]
    }
  },
  "editor.wordWrap": "on",
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": true,
  "extensions.ignoreRecommendations": true,
  "files.autoSave": "off",
  "files.autoSaveDelay": 10000,
  "files.encoding": "utf8",
  "files.eol": "\n",
  "files.hotExit": "onExit",
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true
  },
  "git.ignoreMissingGitWarning": true,
  "gitlens.advanced.messages": {
    "suppressCommitHasNoPreviousCommitWarning": false,
    "suppressCommitNotFoundWarning": false,
    "suppressFileNotUnderSourceControlWarning": false,
    "suppressGitVersionWarning": false,
    "suppressLineUncommittedWarning": false,
    "suppressNoRepositoryWarning": false,
    "suppressUpdateNotice": false,
    "suppressWelcomeNotice": true
  },
  "gitlens.keymap": "alternate",
  "http.proxyStrictSSL": false,
  "material-icon-theme.folders.theme": "specific",
  "multiCommand.commands": [
    {
      "command": "multiCommand.makeRoom",
      "sequence": [
        "workbench.action.toggleSidebarVisibility",
        "workbench.action.toggleActivityBarVisibility"
      ]
    }
  ],
  "terminal.integrated.shell.windows": "C:\\Program Files (x86)\\Git\\bin\\bash.exe",
  "typescript.suggest.paths": false, // required by hristian-kohler.path-intellisense
  "vim.easymotion": true,
  "vim.sneak": true,
  "vim.incsearch": true,
  "vim.useSystemClipboard": true,
  "vim.useCtrlKeys": true,
  "vim.hlsearch": true,
  "vim.insertModeKeyBindings": [
    {
      "before": ["j", "j"],
      "after": ["<Esc>"]
    }
  ],
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["<leader>", "d"],
      "after": ["d", "d"]
    },
    {
      "before": ["<C-n>"],
      "commands": [":nohl"]
    }
  ],
  "vim.leader": "<space>",
  "vim.handleKeys": {
    "<C-a>": false,
    "<C-f>": false
  },
  "window.restoreWindows": "all",
  "window.title": "${activeEditorLong}${separator}${rootName}",
  "window.zoomLevel": 0,
  "workbench.activityBar.visible": true,
  "workbench.colorCustomizations": {
    // "editorIndentGuide.background": "#0000ff",
    "editorCursor.background": "#bb55dd",
    "editorCursor.foreground": "#aaccff",
    "editor.selectionBackground": "#bb55dd",
    "editor.selectionForeground": "#442288",
    "editor.selectionHighlightBackground": "#9933bb",
    "editorWhitespace.foreground": "#444444",
    "statusBar.background": "#663366",
    "statusBar.foreground": "#cac",
    "statusBar.noFolderBackground": "#663333",
    "statusBar.debuggingBackground": "#263238"
  },
  "workbench.colorTheme": "Mayukai Semantic Mirage",
  "workbench.editor.enablePreview": false,
  "workbench.editor.labelFormat": "short",
  "workbench.iconTheme": "simple-icons",
  "workbench.settings.editor": "json",
  "workbench.sideBar.location": "left",
  "workbench.statusBar.visible": true,
  "zenMode.fullScreen": true,
  "[markdown]": {
    "files.trimTrailingWhitespace": false,
  },
  "[python]": {
    "editor.tabSize": 4,
  },

  // GitLens
  "gitlens.blame.heatmap.enabled": true,
  "gitlens.currentLine.enabled": false,

  // JavaScript
  "javascript.implicitProjectConfig.checkJs": true,
  "npm.enableScriptExplorer": true,

  // Settings sync
  "sync.gist": "7fc97ccd1eb6cec364eec3e2bb3d7290",
  "sync.quietSync": false,
  "sync.removeExtensions": true,
  "sync.syncExtensions": true,
  "sync.autoDownload": false,
  "sync.autoUpload": false,
  "sync.forceDownload": false,

  // SortLines
  "sortLines.filterBlankLines": false,
  "sortLines.sortEntireFile": true,

}
